    <script>
        function scrollToElementAndExpand(elementId) {
            var element = document.getElementById(elementId);
            if (element) {
                // Get the parent accordion collapse element
                var collapseElement = element.querySelector('.collapse');

                // If a collapse element is found and it's not already shown, expand it
                if (collapseElement && !collapseElement.classList.contains('show')) {
                    var allCollapses = document.querySelectorAll('.accordion .collapse.show');
                    allCollapses.forEach(function (collapse) {
                        // Hide all currently open collapse elements
                        var bsCollapse = new bootstrap.Collapse(collapse, {
                            toggle: false
                        });
                        bsCollapse.hide();
                    });

                    // Now, show the target collapse element
                    var targetCollapse = new bootstrap.Collapse(collapseElement, {
                        toggle: false
                    });
                    targetCollapse.show();

                    // Scroll to the target element after expanding
                    collapseElement.addEventListener('shown.bs.collapse', function () {
                        element.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    });
                } else {
                    // If already expanded, just scroll to the element
                    element.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            }
        }
    </script>


